{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check",
            "command": "cargo",
            "args": [
                "check"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "cargo-check",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Checking for the Wasm target\\.\\.\\.",
                    "endsPattern": "Your wasm pkg is ready to publish at"
                },
                "pattern": [{
                    "regexp": "^\\s*(\\S+)\\s*$",
                    "file": 1
                }, {
                    "regexp": "^\\s+(\\d+):(\\d+)\\s+(\\S+)\\s+(.*)\\s\\s+(.*)\\s*$",
                    "line": 1,
                    "column": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5
                }]
            }
        },
        {
            "label": "fix",
            "command": "cargo",
            "args": [
                "fix",
                "--allow-staged",
                "--broken-code",
                "--edition-idioms"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "cargo-check",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Checking nonce_generator",
                    "endsPattern": "Finished dev"
                },
                "pattern": [{
                    "regexp": "^\\s*(\\S+)\\s*$",
                    "file": 1
                }, {
                    "regexp": "^\\s+(\\d+):(\\d+)\\s+(\\S+)\\s+(.*)\\s\\s+(.*)\\s*$",
                    "line": 1,
                    "column": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5
                }]
            }
        },
        {
            "label": "native-example",
            "command": "cargo",
            "args": [
                "run",
                "--example",
                "${fileBasenameNoExtension}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {}
        },
        {
            "label": "build",
            "command": "cargo",
            "args": [
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {}
        },
        {
            "label": "wasm-test",
            "command": "wasm-pack",
            "args": [
                "test",
                "--chrome"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {}
        },
        {
            "label": "cargo clean",
            "hide": true,
            "command": "cargo",
            "args": [
                "clean"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": {}
        },
    ]
}
